<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/ak_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_also_known_as_label"
        android:textStyle="bold"
        android:textColor="@color/dark_orange"
        android:layout_below="@+id/image_iv"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/also_known_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ak_tv"
        android:layout_alignLeft="@id/ak_tv"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/poo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ingredients_tv"
        android:text="@string/detail_place_of_origin_label"
        android:textStyle="bold"
        android:textColor="@color/dark_orange"/>

    <TextView
        android:id="@+id/origin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poo_tv"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/dd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/origin_tv"
        android:text="@string/detail_description_label"
        android:textStyle="bold"
        android:textColor="@color/dark_orange"/>

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dd_tv"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/i_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_iv"
        android:text="@string/detail_ingredients_label"
        android:textStyle="bold"
        android:textColor="@color/dark_orange"/>

    <TextView
        android:id="@+id/ingredients_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/i_tv"
        android:layout_below="@+id/i_tv"
        android:textColor="@color/white"/>
</RelativeLayout>
</ScrollView>